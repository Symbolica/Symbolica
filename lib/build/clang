#!/usr/bin/env sh
set -e

p="$@"
set --

extension=

for x in $p
do
    case "$x" in
        -static) ;;
        -l*) ;;
        -o) set -- "$@" -o ; extension=".bc" ;;
        *) set -- "$@" "$x$extension" ; extension= ;;
    esac
done

if [ -z "$NO_LLVM" ];
    then clang-12 -emit-llvm -c "$@";
fi

if [ -n "$CODEGEN" ];
    then exec clang-12 $p;
fi
